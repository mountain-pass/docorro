<?xml version="1.0" encoding="UTF-8"?>
<project name="Docorro-test-ebaySvc"
         basedir="../../.."
         xmlns="antlib:org.apache.tools.ant"
         xmlns:docorro="org.windyroad.docorro"
         default="run-test">

    <import file="../../../build.xml" />


    <target name="create-doc" depends="-load-ant-contrib">
        <mkdir dir="build/pending" />
        <docorro:xslt in="src/test/quick/data/ebaySvc.wsdl"
                      out="build/ebaySvc.html"
                      style="${docorro.xslt}" />
        <fail message="HTML not built">
            <condition>
                <not>
                    <available file="build/ebaySvc.html" />
                </not>
            </condition>
        </fail>
        <docorro:validate-xhtml file="build/ebaySvc.html" />
    </target>

    <target name="validate-doc" depends="create-doc">
        <docorro:schematron schema="src/test/quick/data/ebaySvc.sch"
                            in="build/ebaySvc.html"
                            out="build/ebaySvc.svrl" />
        <fail message="Schematron output missing">
            <condition>
                <not>
                    <available file="build/ebaySvc.svrl" />
                </not>
            </condition>
        </fail>
        <docorro:svrl-2-junit in="build/ebaySvc.svrl" out="build/ebaySvc.junit" />
        <fail message="Schematron Failure">
            <condition>
                <isfileselected file="build/pending/ebaySvc.junit">
                    <containsregexp expression="&lt;error " />
                </isfileselected>
            </condition>
        </fail>
    </target>

    <target name="run-test" depends="validate-doc"/>
</project>
