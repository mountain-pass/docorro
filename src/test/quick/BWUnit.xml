<?xml version="1.0" encoding="UTF-8"?>
<project name="Docorro-test-BWUnit"
         basedir="../../.."
         xmlns="antlib:org.apache.tools.ant"
         xmlns:docorro="org.windyroad.docorro"
         default="run-test">

    <import file="../../../build.xml" />


    <target name="create-doc" depends="-load-ant-contrib">
        <mkdir dir="build" />
        <docorro:xslt in="src/test/quick/data/BWUnit.wsdl"
                      out="build/BWUnit.html"
                      style="src/xslt/docorro.xslt" />
        <fail message="HTML not built">
            <condition>
                <not>
                    <available file="build/BWUnit.html" />
                </not>
            </condition>
        </fail>
        <docorro:validate-xhtml file="build/BWUnit.html" />
    </target>

    <target name="validate-doc" depends="create-doc">
        <docorro:schematron schema="src/test/quick/data/BWUnit.sch"
                            in="build/BWUnit.html"
                            out="build/BWUnit.svrl" />
        <fail message="Schematron output missing">
            <condition>
                <not>
                    <available file="build/BWUnit.svrl" />
                </not>
            </condition>
        </fail>
        <docorro:svrl-2-junit in="build/BWUnit.svrl" out="build/BWUnit.junit" />
        <fail message="Schematron Failure">
            <condition>
                <isfileselected file="build/BWUnit.junit">
                    <containsregexp expression="&lt;error " />
                </isfileselected>
            </condition>
        </fail>
    </target>

    <target name="run-test" depends="validate-doc"/>
</project>
